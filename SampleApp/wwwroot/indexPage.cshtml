}

<!DOCTYPE html>
<html>

<head>
    <title>@(model.AppTitle)</title>
    <link rel="shortcut icon" href="Files/V@(model.AppVersion)/favicon.ico" type="image/x-icon">
    <link rel="icon" href="Files/V@(model.AppVersion)/favicon.ico" type="image/x-icon">
