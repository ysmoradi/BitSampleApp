<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net4.6.1</TargetFramework>
    <TypeScriptToolsVersion>2.8</TypeScriptToolsVersion>
  </PropertyGroup>

  <ItemGroup>
    <Content Remove="wwwroot\index.ts" />
    <Content Remove="wwwroot\SampleApp.Model.Context.d.ts" />
    <Content Remove="wwwroot\SampleApp.Model.Context.js" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Bit.Data.EntityFrameworkCore" Version="1.0.6" />
    <PackageReference Include="Bit.IdentityServer" Version="1.0.6" />
    <PackageReference Include="Bit.OData" Version="1.0.6" />
    <PackageReference Include="Bit.OwinCore" Version="1.0.6" />
    <PackageReference Include="Bit.OwinCore.AspNetCore2Upgrade" Version="1.0.6" />
    <PackageReference Include="BitCodeAnalyzer" Version="1.2.6.2" />
    <PackageReference Include="Microsoft.AspNetCore.Cors" Version="2.0.3" />
    <PackageReference Include="Microsoft.AspNetCore.ResponseCompression" Version="2.0.3" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.InMemory" Version="2.0.3" />
    <PackageReference Include="SourceLink.Copy.PdbFiles" Version="2.8.1" PrivateAssets="All" />
  </ItemGroup>

  <ItemGroup>
    <TypeScriptCompile Include="wwwroot\index.ts" />
  </ItemGroup>

  <ItemGroup>
    <Content Update="environments.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <None Update="IdentityServerCertificate.pfx">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
