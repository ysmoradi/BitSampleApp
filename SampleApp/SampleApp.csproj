<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net4.6.1</TargetFramework>
    <TypeScriptToolsVersion>Latest</TypeScriptToolsVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Bit.Data.EntityFrameworkCore" Version="1.3.80" />
    <PackageReference Include="Bit.IdentityServer" Version="1.3.80" />
    <PackageReference Include="Bit.OData" Version="1.3.80" />
    <PackageReference Include="Bit.OwinCore" Version="1.3.80" />
    <PackageReference Include="Bit.OwinCore.AspNetCore21Upgrade" Version="1.3.80" />
    <PackageReference Include="BitCodeAnalyzer" Version="1.3.80" />
    <PackageReference Include="BitCodeGeneratorTask" Version="1.3.80" />
    <PackageReference Include="Microsoft.AspNetCore.Cors" Version="2.1.1" />
    <PackageReference Include="Microsoft.AspNetCore.ResponseCompression" Version="2.1.1" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.InMemory" Version="2.1.4" />
    <PackageReference Include="SourceLink.Copy.PdbFiles" Version="2.8.3" PrivateAssets="All" />
  </ItemGroup>

  <ItemGroup>
    <TypeScriptCompile Include="wwwroot\index.ts" />
  </ItemGroup>

  <ItemGroup>
    <Content Update="environments.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <None Update="IdentityServerCertificate.pfx">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
